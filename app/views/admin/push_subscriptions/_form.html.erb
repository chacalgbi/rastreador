<%= form_with(model: [:admin, push_subscription]) do |form| %>

  <div class="form-group row mb-2">
    <%= form.label :user_id, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :user_id, class: "form-control" %>
      <%= tag.div push_subscription.errors[:user_id].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :endpoint, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :endpoint, class: "form-control" %>
      <%= tag.div push_subscription.errors[:endpoint].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :p256dh, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :p256dh, class: "form-control" %>
      <%= tag.div push_subscription.errors[:p256dh].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :auth, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :auth, class: "form-control" %>
      <%= tag.div push_subscription.errors[:auth].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :subscribed, class: "form-check-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.checkbox :subscribed, class: "form-check-input" %>
      <%= tag.div push_subscription.errors[:subscribed].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-footer">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_push_subscriptions_path, class: "btn btn-white" %>
  </div>
<% end %>
