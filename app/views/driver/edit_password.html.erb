<h1 class="font-bold text-2xl">Alterar Senha do Motorista: <%= @user.name %></h1>
<br>

<%= form_with model: @user, url: update_password_driver_path(@user), method: :patch, local: true do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger mb-4">
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
          <li><h1 style="color: red; font-size: 22px;"><%= message %></h1></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Nova Senha", class: "text-sm font-medium" %><br>
    <%= f.password_field :password, class: "input", placeholder: "Digite a nova senha" %><br><br>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "text-sm font-medium" %><br>
    <%= f.password_field :password_confirmation, class: "input", placeholder: "Confirme a nova senha" %><br><br>
  </div>

  <div class="form-group">
    <%= f.submit "Modificar Senha", class: "btn btn-primary" %>
    <div class="button-container">
      <%= link_to driver_index_path, class: "btn btn-primary align-right" do %>
        <%= image_tag "arrow-left.svg", size: 25, aria: { hidden: true } %>Voltar
      <% end %>
    </div>
  </div>
<% end %>
