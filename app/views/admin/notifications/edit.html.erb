<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Editar notificação" do %>
  <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
  <li class="breadcrumb-item"><%= link_to "Notificações", admin_notifications_path %></li>
  <li class="breadcrumb-item"><%= link_to "Mostrar esta notificação", [:admin, @notification] %></li>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <%= render "form", notification: @notification %>
      </div>
    </div>
  </div>
</div>
