    <div class="card">
      <div class="table-responsive">
        <table class="table table-vcenter table-nowrap card-table">
          <thead>
            <tr>
              <th>Editar</th>
              <th><%= sort_link @search, :device_id %></th>
              <th style="width: 120px;"><%= sort_link @search, :device_name %></th>
              <th style="width: 120px;"><%= sort_link @search, "Em uso por" %></th>
