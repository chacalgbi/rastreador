                    <%= link_to "https://allmanager.com.br/management/inventory?iccid=#{detail.iccid}", target: "_blank", rel: "noopener noreferrer", class: "btn btn-primary btn-sm" do %>Info<% end %>
                  <% end %>
                </td>
                <td><%= link_to detail.url, target: "_blank", rel: "noopener noreferrer", class: "btn btn-primary btn-sm" do %>üìç Ver no Mapa <% end %></td>
                <td><%= detail.cell_number %></td>
                <td><%= detail.network %></td>
                <td><%= detail.model %></td>
                <td><%= detail.velo_max %></td>
                <td><%= detail.cercas %></td>
                <td><%= detail.satelites %></td>
                <td><%= detail.version %></td>
                <td><%= detail.imei %></td>
                <td><%= detail.bat_nivel %></td>
                <td><%= detail.signal_gps %></td>
                <td><%= detail.signal_gsm %></td>
                <td><%= detail.acc %></td>
                <td><%= detail.acc_virtual %></td>
                <td><%= detail.charge %></td>
                <td><%= detail.heartbeat %></td>
                <td><%= detail.obs %></td>
                <td><%= detail.params %></td>
                <td><%= detail.apn %></td>
                <td><%= detail.ip_and_port %></td>
                <td style="<%= color_cel(detail.alert_whatsApp) %>"><%= detail.alert_whatsApp ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.alert_telegram) %>"><%= detail.alert_telegram ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.alert_email) %>"><%= detail.alert_email ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.send_exit_cerca) %>"><%= detail.send_exit_cerca ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.send_battery) %>"><%= detail.send_battery ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.send_moving) %>"><%= detail.send_moving ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.send_velo_max) %>"><%= detail.send_velo_max ? "Sim" : "N√£o" %></td>
                <td style="<%= color_cel(detail.send_rele) %>"><%= detail.send_rele ? "Sim" : "N√£o" %></td>
                <td><%= detail.created_at %></td>
                <td>
                  <%= link_to "Ver", [:admin, detail], class: "btn btn-white btn-sm" %>
                  <%= link_to "Deletar", [:admin, detail], class: "btn btn-white btn-sm", data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja deletar este ve√≠culo?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex align-items-center fs-5">
        <div class="d-none d-md-block">
          <div>Download: <%= link_to "CSV", url_for(format: :csv, q: request.params[:q]) %></div>
          <%== pagy_info(@pagy) %>
        </div>
        <div class="ms-auto">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="offcanvas_filters" tabindex="-1" class="offcanvas offcanvas-end">
  <div class="offcanvas-header">
    <h2 class="offcanvas-title">Filtros</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
  </div>
  <%= search_form_for [:admin, @search], class: "offcanvas-body" do |f| %>

    <%= f.label :device_id_cont, "ID do Dispositivo", class: "form-label" %>
    <%= f.text_field :device_id_cont, placeholder: "Digite o ID do dispositivo", class: "form-control mb-3" %>

    <%= f.label :device_name_cont, "Nome do Dispositivo", class: "form-label" %>
    <%= f.text_field :device_name_cont, placeholder: "Digite o nome do dispositivo", class: "form-control mb-3" %>

    <%= f.label :status_eq, "Status", class: "form-label" %>
    <%= f.select :status_eq, 
        options_for_select([
          ['Todos', ''], 
          ['Online', 'online'], 
          ['Offline', 'offline']
        ], f.object.status_eq), 
        {}, 
        { class: "form-select mb-3" } %>

    <%= f.label :rele_state_eq, "Estado do Rel√©", class: "form-label" %>
    <%= f.select :rele_state_eq, 
        options_for_select([
          ['Todos', ''], 
          ['Ligado', 'on'], 
          ['Desligado', 'off']
        ], f.object.rele_state_eq), 
        {}, 
        { class: "form-select mb-3" } %>

    <%= f.label :model_eq, "Modelo", class: "form-label" %>
    <%= f.select :model_eq, 
        options_for_select([
          ['Todos', ''], 
          ['XT40', 'xt40'], 
          ['ST8310U', 'st8310u']
        ], f.object.model_eq), 
        {}, 
        { class: "form-select mb-3" } %>

    <%= f.submit "Filtrar", class: "btn btn-primary" %>
    <%= link_to "Limpar Filtros", admin_details_path, class: "btn btn-white" %>
  <% end %>
</div>
