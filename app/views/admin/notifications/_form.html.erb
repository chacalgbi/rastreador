<%= form_with(model: [:admin, notification]) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :id, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.number_field :id, class: "form-control" %>
      <%= tag.div notification.errors[:id].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :user_id, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :user_id, class: "form-control" %>
      <%= tag.div notification.errors[:user_id].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :whatsapp, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.textarea :whatsapp, class: "form-control" %>
      <%= tag.div notification.errors[:whatsapp].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :email, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.textarea :email, class: "form-control" %>
      <%= tag.div notification.errors[:email].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :telegram, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.textarea :telegram, class: "form-control" %>
      <%= tag.div notification.errors[:telegram].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :created_at, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.datetime_field :created_at, class: "form-control" %>
      <%= tag.div notification.errors[:created_at].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :updated_at, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.datetime_field :updated_at, class: "form-control" %>
      <%= tag.div notification.errors[:updated_at].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-footer">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_notifications_path, class: "btn btn-white" %>
  </div>
<% end %>
