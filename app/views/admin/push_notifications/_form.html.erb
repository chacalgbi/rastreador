<%= form_with(model: [:admin, push_notification]) do |form| %>

  <div class="form-group row mb-2">
    <%= form.label :title, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :title, class: "form-control" %>
      <%= tag.div push_notification.errors[:title].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :body, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.textarea :body, class: "form-control" %>
      <%= tag.div push_notification.errors[:body].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-footer">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", admin_push_notifications_path, class: "btn btn-white" %>
  </div>
<% end %>
