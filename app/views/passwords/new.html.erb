<h1 class="font-bold text-2xl">Esqueceu sua senha?</h1> <br>

<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

<%= form_with url: passwords_path do |form| %>
  <%= form.text_field :phone, required: true, autofocus: true, autocomplete: "username", placeholder: "Insira o telefone ou e-mail que usou no cadastro", value: params[:phone], class: 'input' %><br> <br>
  <%= form.submit "Enviar instruções de recuperação de senha para o telefone ou e-mail", class: 'btn' %>
<% end %>
<br>
<%= link_to 'Voltar ao login', new_session_path, class: 'btn' %>