<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Showing battery" do %>
    <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
    <li class="breadcrumb-item"><%= link_to "Batteries", admin_batteries_path %></li>
  <% end %>

  <%= render "page_header_actions" do %>
    <%= link_to "Edit battery", edit_admin_battery_path(@battery), class: "btn btn-primary" %>
    <%= link_to "Delete battery", [:admin, @battery], class: "btn btn-white", data: { method: :delete, confirm: "Are you sure?" } %>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Battery details</h3>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-md-3">Device</dt>
          <dd class="col-md-9"><%= @battery.device_id %></dd>
          <dt class="col-md-3">Device name</dt>
          <dd class="col-md-9"><%= @battery.device_name %></dd>
          <dt class="col-md-3">User</dt>
          <dd class="col-md-9"><%= @battery.user_id %></dd>
          <dt class="col-md-3">User name</dt>
          <dd class="col-md-9"><%= @battery.user_name %></dd>
          <dt class="col-md-3">Bat</dt>
          <dd class="col-md-9"><%= @battery.bat %></dd>
          <dt class="col-md-3">Bkp</dt>
          <dd class="col-md-9"><%= @battery.bkp %></dd>
          <dt class="col-md-3">Created at</dt>
          <dd class="col-md-9"><%= @battery.created_at %></dd>
          <dt class="col-md-3">Updated at</dt>
          <dd class="col-md-9"><%= @battery.updated_at %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
