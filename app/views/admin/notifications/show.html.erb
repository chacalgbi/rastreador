<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Mostrar Notificação" do %>
    <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
    <li class="breadcrumb-item"><%= link_to "Notificações", admin_notifications_path %></li>
  <% end %>

  <%= render "page_header_actions" do %>
    <%= link_to "Editar notificação", edit_admin_notification_path(@notification), class: "btn btn-primary" %>
    <%= form_with url: admin_notification_path(@notification), method: :delete, local: true, style: "display: inline-block;" do |f| %>
      <%= f.submit "Deletar  notificação", class: "btn btn-white", onclick: "return confirm('Deseja realmente apagar?')" %>
    <% end %>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Detalhes da notificação</h3>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-md-3">Id</dt>
          <dd class="col-md-9"><%= @notification.id %></dd>
          <dt class="col-md-3">User_id</dt>
          <dd class="col-md-9"><%= @notification.user_id %></dd>
          <dt class="col-md-3">Whatsapp</dt>
          <dd class="col-md-9"><%= @notification.whatsapp %></dd>
          <dt class="col-md-3">Email</dt>
          <dd class="col-md-9"><%= @notification.email %></dd>
          <dt class="col-md-3">Telegram</dt>
          <dd class="col-md-9"><%= @notification.telegram %></dd>
          <dt class="col-md-3">Created at</dt>
          <dd class="col-md-9"><%= @notification.created_at %></dd>
          <dt class="col-md-3">Updated at</dt>
          <dd class="col-md-9"><%= @notification.updated_at %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
