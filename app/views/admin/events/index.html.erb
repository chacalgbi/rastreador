<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Eventos" do %>
    <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
  <% end %>

  <%= render "page_header_actions" do %>
    <%= link_to "Filtros", "#offcanvas_filters", "data-bs-toggle": "offcanvas", class: "btn btn-white" %>
    <%= link_to "Excluir Eventos Antigos", "#offcanvas_delete_old", "data-bs-toggle": "offcanvas", class: "btn btn-danger" %>
    <%= link_to "Novo evento", new_admin_event_path, class: "btn btn-primary" %>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-fluid">
    <div class="card">
      <div class="table-responsive">
        <table class="table table-vcenter table-nowrap card-table table-striped">
          <thead>
            <tr>
              <th><%= sort_link @search, :id %></th>
              <th><%= sort_link @search, :car_id %></th>
              <th><%= sort_link @search, :updated_at %></th>
              <th><%= sort_link @search, :car_name %></th>
              <th><%= sort_link @search, :event_type %></th>
              <th><%= sort_link @search, :event_name %></th>
              <th><%= sort_link @search, :message %></th>
              <th><%= sort_link @search, :driver_name %></th>
              <th class="w-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.id %></td>
                <td><%= event.car_id %></td>
                <td>
                  <%= event.updated_at.strftime("%H:%M:%S %d/%m/%Y") %>
                  <% if event.updated_at.to_date == Date.today %>
                  Hoje
                  <% elsif event.updated_at.to_date == Date.yesterday %>
                  Ontem
                  <% end %>
                </td>
                <td><%= event.car_name %></td>
                <td><%= event.event_type %></td>
                <td><%= event.event_name %></td>
                <td><%= event.message %></td>
                <td><%= event.driver_name %></td>
                <td>
                  <%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-white btn-sm" %>
                  <%= link_to "Delete", [:admin, event], class: "btn btn-white btn-sm", data: { method: :delete, confirm: "Deletar este evento?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex align-items-center fs-5">
        <div class="d-none d-md-block">
          <div>Download: <%= link_to "CSV", url_for(format: :csv, q: request.params[:q]) %></div>
          <%== pagy_info(@pagy) %>
        </div>
        <div class="ms-auto">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="offcanvas_filters" tabindex="-1" class="offcanvas offcanvas-end">
  <div class="offcanvas-header">
    <h2 class="offcanvas-title">Filtros</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
  </div>
  <%= search_form_for [:admin, @search], class: "offcanvas-body" do |f| %>
    <%= f.label :car_name_cont, "Nome do Carro", class: "form-label" %>
    <%= f.text_field :car_name_cont, placeholder: "Digite o nome do carro", class: "form-control mb-3" %>

    <%= f.label :car_id_eq, "ID do Carro", class: "form-label" %>
    <%= f.text_field :car_id_eq, placeholder: "Digite o ID do carro", class: "form-control mb-3" %>

    <%= f.label :event_type_eq, "Tipo de evento", class: "form-label" %>
        <%= f.select :event_type_eq, 
        options_for_select([
          ['Todos', ''],
          ['alarm', 'alarm'],
          ['commandResult', 'commandResult'],
          ['commandSend', 'commandSend'],
          ['deviceOffline', 'deviceOffline'],
          ['deviceOnline', 'deviceOnline'],
          ['deviceMoving', 'deviceMoving'],
          ['deviceStopped', 'deviceStopped'],
          ['deviceOverspeed', 'deviceOverspeed'],
          ['geofenceEnter', 'geofenceEnter'],
          ['geofenceExit', 'geofenceExit'],
          ['ignitionOn', 'ignitionOn'],
          ['ignitionOff', 'ignitionOff'],
          ['sms_callback', 'sms_callback'],
          ['queuedCommandSent', 'queuedCommandSent']
        ], f.object.event_type_eq), 
        {}, 
        { class: "form-select mb-3" } %>

    <%= f.label :event_name_eq, "Nome do evento", class: "form-label" %>
        <%= f.select :event_name_eq, 
        options_for_select([
          ['Todos', ''],
          ['accident', 'accident'],
          ['cerca', 'cerca'],
          ['desligado', 'desligado'],
          ['hardAcceleration', 'hardAcceleration'],
          ['jamming', 'jamming'],
          ['ligado', 'ligado'],
          ['lowBattery', 'lowBattery'],
          ['movendo', 'movendo'],
          ['Off-Line', 'Off-Line'],
          ['On-Line', 'On-Line'],
          ['parado', 'parado'],
          ['powerCut', 'powerCut'],
          ['powerRestored', 'powerRestored'],
          ['rele', 'rele'],
          ['resposta', 'resposta'],
          ['sos', 'sos'],
          ['velocidade', 'velocidade'],
          ['vibration', 'vibration']
        ], f.object.event_name_eq),
        {}, 
        { class: "form-select mb-3" } %>

    <%= f.label :updated_at_gteq, "Data de atualização (a partir de)", class: "form-label" %>
    <%= f.datetime_local_field :updated_at_gteq, class: "form-control mb-3" %>

    <%= f.label :updated_at_lteq, "Data de atualização (até)", class: "form-label" %>
    <%= f.datetime_local_field :updated_at_lteq, class: "form-control mb-3" %>

    <%= f.submit "Filtrar", class: "btn btn-primary" %>
    <%= link_to "Limpar Filtro", admin_events_path, class: "btn btn-white" %>
  <% end %>
</div>

<div id="offcanvas_delete_old" tabindex="-1" class="offcanvas offcanvas-end">
  <div class="offcanvas-header">
    <h2 class="offcanvas-title">Excluir Eventos Antigos</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body">
    <%= form_with url: destroy_old_events_admin_events_path, method: :delete, local: true do |f| %>
      <div class="alert alert-warning" role="alert">
        <strong>Atenção!</strong> Esta ação não pode ser desfeita. Todos os eventos com data de atualização anterior à data selecionada serão permanentemente excluídos.
      </div>
      
      <%= f.label :delete_before_date, "Excluir eventos anteriores a:", class: "form-label" %>
      <%= f.datetime_local_field :delete_before_date, class: "form-control mb-3", required: true %>
      
      <%= f.submit "Excluir Eventos", class: "btn btn-danger", data: { confirm: "Tem certeza que deseja excluir todos os eventos anteriores à data selecionada? Esta ação não pode ser desfeita." } %>
      <button type="button" class="btn btn-white" data-bs-dismiss="offcanvas">Cancelar</button>
    <% end %>
  </div>
</div>
