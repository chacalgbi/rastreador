<div class="p-5 rounded-lg i-full" style="position: relative; background: linear-gradient(to right, var(--indigo-300), transparent)">
  <h1 class="text-2xl" style="font-family: var(--font-old-style); color: var(--blue-800)"><%= car.device_name %></h1>
  <div class="car_container">
    <div class="car_item">
      <%= render 'home/status_badge', detail: car %>
    </div>
    <div class="car_item">
      V. MÃ¡x: <%= car.velo_max %>
    </div>
    <div class="car_item">
      <%= turbo_frame_tag "details_button_#{car.device_id}" do %>
        <%= render 'details/button_details', show_details: false, device_id: car.device_id, status: car.status %>
      <% end %>
    </div>
  </div>
  <%= turbo_frame_tag "location_#{car.device_id}" do %><% end %>
  <%= turbo_frame_tag "details_#{car.device_id}" do %><% end %>
  <%= turbo_frame_tag "events_#{car.device_id}" do %><% end %>
  <% if Current.user.admin? && Flipper.enabled?(:exibir_id_device_id_home) %>
    <div style="position: absolute; bottom: 5px; right: 10px; font-size: 0.7rem; color: var(--gray-200);">
      id: <%= car.id %> device_id: <%= car.device_id %>
    </div>
  <% end %>
</div>
