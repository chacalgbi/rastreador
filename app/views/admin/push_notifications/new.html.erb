<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Nova notificação Push" do %>
    <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
    <li class="breadcrumb-item"><%= link_to "Lista de notificações", admin_push_notifications_path %></li>
  <% end %>
<% end %>


<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <h2>Ao criar uma nova notificação Push será enviado para todos os usuários inscritos.</h2>
        <%= render "form", push_notification: @push_notification %>
      </div>
    </div>
  </div>
</div>
