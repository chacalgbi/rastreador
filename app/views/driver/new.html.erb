<h1 class="font-bold text-2xl">Cadastrar Novo Motorista</h1>
<br>

<%= form_with model: @user, url: driver_index_path, local: true, html: { autocomplete: "off" } do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nome", class: "text-sm font-medium" %><br>
    <%= form.text_field :name, class: "input", placeholder: "Digite o nome completo" %><br><br>
  </div>

  <div class="form-group">
    <%= form.label :phone, "Telefone", class: "text-sm font-medium" %><br>
    <%= form.text_field :phone, class: "input", placeholder: "77988221234" %><br><br>
  </div>

  <div class="form-group">
    <%= form.label :password, "Senha", class: "text-sm font-medium" %><br>
    <%= form.password_field :password, class: "input", placeholder: "Digite a senha", autocomplete: "new-password", data: { lpignore: "true" } %><br><br>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirmar Senha", class: "text-sm font-medium" %><br>
    <%= form.password_field :password_confirmation, class: "input", placeholder: "Confirme a senha" %><br><br>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Cadastrar Motorista", class: "btn btn-primary" %>
    <div class="button-container">
      <%= link_to driver_index_path, class: "btn btn-primary align-right" do %>
        <%= image_tag "arrow-left.svg", size: 25, aria: { hidden: true } %>Voltar
      <% end %>
    </div>
  </div>
<% end %>
