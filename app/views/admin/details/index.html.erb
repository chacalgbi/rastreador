              <th style="width: 80px;"><%= sort_link @search, "Uso" %></th>
              <th>Lig/Desl</th>
              <th style="width: 100px;"><%= sort_link @search, "Event" %></th>
              <th style="width: 100px;"><%= sort_link @search, "Update" %></th>
