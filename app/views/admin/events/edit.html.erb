<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Editing event" do %>
  <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
  <li class="breadcrumb-item"><%= link_to "Events", admin_events_path %></li>
  <li class="breadcrumb-item"><%= link_to "Show this event", [:admin, @event] %></li>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <%= render "form", event: @event %>
      </div>
    </div>
  </div>
</div>
