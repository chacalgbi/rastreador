              <th><%= sort_link @search, :acc_virtual %></th>
              <th><%= sort_link @search, :charge %></th>
              <th><%= sort_link @search, :heartbeat %></th>
              <th><%= sort_link @search, :obs %></th>
              <th><%= sort_link @search, :params %></th>
